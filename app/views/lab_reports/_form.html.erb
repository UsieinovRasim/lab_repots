<%= form_with(model: [ @user, @lab_report ], local: true) do |form| %>
  <% if @lab_report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@lab_report.errors.count, "ошибка") %> запрещают сохранение:</h2>

      <ul>
        <% @lab_report.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, 'Заголовок' %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, 'Описание' %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :user, 'Студент' %>
    <%= form.select :user_id, LabReport.user_options %>
  </div>

  <div>
    <%= form.label :grade, 'Оценка' %>
    <%= form.select :grade, LabReport::GRADES %>
  </div>

  <div>
    <%= form.submit 'Сохранить' %>
  </div>
<% end %>

<h1>Отчет о лабораторной работе</h1>

<div>
  <h3><%= @lab_report.title %></h3>
  <p><%= @lab_report.description %></p>
  <p><strong>Оценка:</strong> <%= @lab_report.grade %></p>
</div>

<%= link_to 'Редактировать', edit_lab_report_path(@lab_report) %>
<%= button_to 'Удалить', lab_report_path(@lab_report), method: :delete, data: { turbo_confirm: 'Вы уверены?' } %>
<%= link_to 'Назад', lab_reports_path %>
